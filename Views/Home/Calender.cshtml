<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calendar with Info Section and Event Modal</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.0/fullcalendar.min.css" rel="stylesheet">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f0f0f0;
        }

        .container {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        #calendar {
            flex: 1;
            background-color: #ffffff;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-right: 20px;
        }

        .info-section {
            width: 250px;
            background-color: #f8f8f8;
            padding: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .fc-day-header {
            background-color: #333;
            color: white;
        }

        .fc-day {
            background-color: #87CEFA;
            border: 1px solid #f0f0f0;
        }

        .fc-event {
            background-color: #ffcc00;
            color: #000;
            border: none;
        }

        button {
            background-color: #ffd700;
            color: #000;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

            button:hover {
                background-color: #ffc700;
            }

        h3 {
            margin-top: 0;
        }
    </style>
</head>
<body>

    <div class="container">
        <div id="calendar">
            <!-- FullCalendar will be rendered here -->
        </div>

        <div class="info-section">
            <h3>Labels and Events Shown</h3>
            <p>Event Labels:</p>
            <ul id="event-labels"></ul>
            <button id="add-event-btn" data-toggle="modal" data-target="#eventModal">Add New Event</button>
        </div>
    </div>

    <!-- Modal for creating a new event -->
    <div class="modal fade" id="eventModal" tabindex="-1" role="dialog" aria-labelledby="eventModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="eventModalLabel">Create New Event</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="createEventForm">
                        <div class="form-group">
                            <label for="Title">Event Title</label>
                            <input type="text" class="form-control" id="Title" name="Title" required>
                        </div>
                        <div class="form-group">
                            <label for="StartDate">Start Date</label>
                            <input type="date" class="form-control" id="StartDate" name="StartDate" required>
                        </div>
                        <div class="form-group">
                            <label for="EndDate">End Date</label>
                            <input type="date" class="form-control" id="EndDate" name="EndDate" required>
                        </div>
                        <div class="form-group">
                            <label for="Repeat">Repeat</label>
                            <input type="text" class="form-control" id="Repeat" name="Repeat">
                        </div>
                        <div class="form-group">
                            <label for="Location">Location</label>
                            <input type="text" class="form-control" id="Location" name="Location">
                        </div>
                        <div class="form-group">
                            <label for="Attendees">Attendees</label>
                            <input type="text" class="form-control" id="Attendees" name="Attendees">
                        </div>
                        <div class="form-group">
                            <label for="Description">Description</label>
                            <input type="text" class="form-control" id="Description" name="Description">
                        </div>
                        <div class="form-group">
                            <label for="Reminder">Reminder</label>
                            <input type="text" class="form-control" id="Reminder" name="Reminder">
                        </div>
                        <div class="form-group">
                            <label for="Label">Event Label</label>
                            <input type="text" class="form-control" id="Label" name="Label" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Event</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @section scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.10.0/fullcalendar.min.js"></script>

        <script>
            $(document).ready(function () {
                // Initialize FullCalendar
                $('#calendar').fullCalendar({
                    header: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'month,basicWeek,basicDay'
                    },
                    defaultView: 'month',
                    events: function (start, end, timezone, callback) {
                        $.ajax({
                            url: '@Url.Action("GetEvents", "EventModels")',
                            method: 'GET',
                            dataType: 'json',
                            success: function (data) {
                                const events = data.map(event => ({
                                    title: event.title,
                                    start: event.start,
                                    end: event.end,
                                    label: event.label
                                }));
                                callback(events);
                            },
                            error: function () {
                                alert('There was an error while fetching events!');
                            }
                        });
                    },
                    eventRender: function (event, element) {
                        element.append("<br/>" + event.label); // Show label on event
                    }
                });

                // Fetch and populate event labels
                $.ajax({
                    url: '@Url.Action("GetEventLabels", "EventModels")',
                    method: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        $.each(data, function (index, label) {
                            $('#event-labels').append('<li>' + label + '</li>');
                        });
                    },
                    error: function () {
                        alert('There was an error while fetching event labels!');
                    }
                });

                // Handle form submission for creating an event
                $('#createEventForm').on('submit', function (e) {
                    e.preventDefault();
                    const formData = $(this).serialize();

                    $.ajax({
                        url: '@Url.Action("Create", "EventModels")',
                        method: 'POST',
                        data: formData,
                        success: function () {
                            alert('Event created successfully!');
                            $('#eventModal').modal('hide');
                            $('#calendar').fullCalendar('refetchEvents'); // Refresh the calendar events
                        },
                        error: function () {
                            alert('There was an error creating the event!');
                        }
                    });
                });
            });
        </script>
    }

</body>
</html>
